<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יום ושעה"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topLL"
        android:layout_width="358dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/movieButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/top_buttons"
            android:gravity="center"
            android:text="סרט"
            android:textColor="@color/real_white" />

        <TextView
            android:id="@+id/dateButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/top_buttons"
            android:gravity="center"
            android:text="יום ושעה"
            android:textColor="@color/real_white" />

        <TextView
            android:id="@+id/cinemaButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/top_buttons"
            android:gravity="center"
            android:text="קולנוע"
            android:textColor="@color/real_white" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLL">

        <GridLayout
            android:id="@+id/gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:orientation="horizontal" />
    </ScrollView>

    <TextView
        android:id="@+id/noMovieFound"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:fontFamily="@font/rubik_dirt"
        android:paddingHorizontal="15dp"
        android:text="@string/no_movie_found"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/scrl"
        app:layout_constraintEnd_toEndOf="@+id/scrl"
        app:layout_constraintStart_toStartOf="@id/scrl"
        app:layout_constraintTop_toTopOf="@+id/scrl" />

</androidx.constraintlayout.widget.ConstraintLayout>