<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/topLL"
        android:layout_width="358dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/movieButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:text="סרט" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:text="יום ושעה" />

        <Button
            android:id="@+id/cinemaButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:text="קולנוע" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLL">

        <GridLayout
            android:id="@+id/gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:orientation="horizontal" />
    </ScrollView>

    <TextView
        android:id="@+id/noMovieFound"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:fontFamily="@font/rubik_dirt"
        android:paddingHorizontal="15dp"
        android:text="@string/no_movie_found"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/scrl"
        app:layout_constraintEnd_toEndOf="@+id/scrl"
        app:layout_constraintStart_toStartOf="@id/scrl"
        app:layout_constraintTop_toTopOf="@+id/scrl" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/yellow_placeholder"
        android:text="AD PLACEHOLDER"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>